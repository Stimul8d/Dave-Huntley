---
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import ContactForm from "@components/ContactForm.astro";
---

<Layout title="Contact">
  <Container>
    <div class="py-16">
      <div class="grid md:grid-cols-2 gap-12">
        <div>
          <h1 class="text-4xl font-bold mb-4">Get in touch</h1>
          <p class="text-xl text-gray-600 mb-8">
            Need help with software delivery, team leadership, or making agile actually work? 
            I've spent two decades figuring this stuff out the hard way.
          </p>
          
          <div class="grid grid-cols-2 gap-12 text-gray-600">
            <div>
              <h2 class="font-bold mb-2">Current Focus</h2>
              <ul class="space-y-2">
                <li>Tech leadership mentoring</li>
                <li>Agile transformation (that works)</li>
                <li>Strategic delivery coaching</li>
              </ul>
            </div>
            
            <div>
              <h2 class="font-bold mb-2">Not Interested In</h2>
              <ul class="space-y-2">
                <li>Agile certification schemes</li>
                <li>Corporate theatre</li>
                <li>Buzzword bingo</li>
              </ul>
            </div>
          </div>
        </div>

        <div class="bg-gray-50 p-8 rounded-xl">
          <ContactForm />
        </div>
      </div>
    </div>
  </Container>
</Layout>